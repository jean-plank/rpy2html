{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es2019", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": ["../generated-json/**/*", "./weeb-engine/**/*", "./test/**/*"]
}
