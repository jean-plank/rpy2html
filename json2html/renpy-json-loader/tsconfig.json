{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": ["./**/*.ts"]
}
